<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marco.stumy.RPadreCorreo"
    android:orientation="vertical"
    >

    <ImageView
        android:src="@drawable/stumylogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

    <EditText
        android:id="@+id/correorpadre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Correo"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/rcorreorpadre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Repetir correo"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3e5b76"
        android:layout_gravity="center_horizontal"
        android:text="Tu correo es importante"
        />

    <Button
        android:id="@+id/btnapadrecorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Aceptar"/>

</LinearLayout>
